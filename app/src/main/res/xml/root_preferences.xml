<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/connection_header">

        <EditTextPreference
            app:key="server_ip"
            app:title="@string/server_ip"
            app:defaultValue="192.168.1.148:7000"/>

        <Preference
            app:key="download_path"
            app:title="@string/download_path" />

    </PreferenceCategory>
    <PreferenceCategory app:title="@string/app_header">

        <SwitchPreferenceCompat
            app:key="night_mode"
            app:title="@string/dark_theme" />
    </PreferenceCategory>

</PreferenceScreen>